<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= content_for?(:title) ? raw("#{yield(:title)} | San7orini") : "San7orini" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application", defer: true %>
  </head>

  <body>
    <%= render partial: 'components/header' %>
    <main class="my-4">
      <div class="container">
        <% if notice.present? %>
          <div class="alert alert-primary"><%= notice %></div>
        <% end %>
        <% if alert.present? %>
          <div class="alert alert-danger"><%= alert %></div>
        <% end %>
      </div>

      <%= yield %>
    </main>
    <%= render partial: 'components/footer' %>
  </body>
</html>
